<h3>Please login or  <%= link_to 'sign up', register_path %></h3>
<%= form_tag(user_sessions_path, method: :post) do %>
  <div class='form-group'>
    <%= label_tag :email %><br />
    <%= text_field_tag :email, nil, class: 'form-control' %>
  </div>
  <div class='form-group'>
    <%= label_tag :password %><br />
    <%= password_field_tag :password, nil, class: 'form-control' %>
  </div><br>
  <div class='form-group'>
    <%= submit_tag 'Login', class: 'btn btn-primary form-control' %>
  </div>
<% end %>
<p style="text-align: center;">or</p>
<p>
<%= link_to 'Login with GitHub', auth_at_provider_path(provider: :github),
        class: "btn btn-primary form-control", style: "background-color:#444;" %>
</p>
