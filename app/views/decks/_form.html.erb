<%= form_with(model: deck, local: true) do |f| %>
  <% if deck.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(deck.errors.count, "error") %>
        prohibited this deck from being saved:
      </h2>
      <ul>
      <% deck.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <br>

  <div class="field">
    <%= f.label :current %>
    <%= f.check_box :current, checked: deck.current? %>
  </div>
  <br>

  <div class="actions">
    <%= f.submit class: 'btn btn-primary form-control'%>
  </div>
<% end %>
