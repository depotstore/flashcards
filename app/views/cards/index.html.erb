<h1>Все карточки</h1>
<h2>You have <%= pluralize(@number, 'overdue card')%></h2><br>
<table class="table table-striped">
  <tr>
    <th>Original</th>
    <th>Translated</th>
    <th>Review</th>
    <th colspan="2"></th>
  </tr>
  <% @cards.each do |card| %>
    <tr>
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date.strftime("%d %m %Y")  if card.review_date %></td>
      <td><%= link_to 'edit', edit_card_path(card) %></td>
      <td><%= link_to 'destroy', card_path(card), method: :delete,
                                 data: { confirm: 'Are you sure?' }%></td>
    </tr>
  <% end %>
</table>
